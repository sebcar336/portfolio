---
interface Props {
    title: string;
    description: string;
    icon: string;
    class_icons: string;
    classlist: string;
    class_content: string;
}
const { title, description, icon, classlist, class_icons, class_content }: Props = Astro.props;
---

<div class=`transition-transform duration-300 ease-in-out group-hover:scale-95 hover:scale-100 border border-violet-900/45 rounded-md gap-2 bg-gradient-to-b from-indigo-950/20 to-slate-950/70 bg-opacity-35 shadow-md backdrop-blur-2xl ${classlist} p-5`>
    <h3 class="text-3xl font-extrabold">{title}</h3>
    <div class=`${class_content}`>
        <p class="text font-light w-[100%] pr-3">{description}</p>
        <div class=`grid ${class_icons} gap-2`>
            <slot/>
        </div>
    </div>
</div>