---
import IconGithub from '../assets/icons/social/IconGithub.astro';
import IconLinkedIn from '../assets/icons/social/IconLinkedIn.astro';
import IconGmail from '../assets/icons/social/IconGmail.astro';
---

<div class="flex w-full py-20 relative mt-30 border-t dark:border-violet-900/45 border-slate-950/45 gap-2 dark:bg-violet-950/20 bg-sky-600/20 bg-opacity-35 inset-shadow-ms backdrop-blur-2xl">
    <div class="absolute -top-12 left-1/3 dark:bg-[#14061F] bg-zinc-300 w-1/3 flex flex-col items-center justify-center gap-5 py-5 border dark:border-violet-900/45 border-slate-950/45 rounded-md shadow-[0_14px_26.9px_-25px_#1F7DD4]">
        <span class="text-ms">Contáctame por mis redes</span>
        <span class="rotate-90">[:D]</span>
        <nav>
            <ul class="flex w-full gap-10">
                <button id="CopyEmail" type="button" class="cursor-pointer"><IconGmail size="w-10 h-10" color="dark:text-BM-text text-WM-text"/></button>
                <div id="tooltip-copy-email" role="tooltip" class="absolute left-1/5 top-2/5 z-10 invisible px-3 py-2 text-sm font-medium text-white transition-opacity duration-300 dark:bg-purple-900 bg-slate-950 rounded-lg shadow-xs opacity-0">
                    <span id="tooltip-message">¡Copiado!</span>
                </div>
                <a href="https://github.com/sebcar336" target="_blank"><IconGithub size="w-10 h-10" color="dark:text-BM-text text-WM-text"/></a>
                <a href="https://www.linkedin.com/in/sebcar336" target="_blank"><IconLinkedIn size="w-10 h-10" color="dark:text-BM-text text-WM-text"/></a>
            </ul>
        </nav>
    </div>
</div>

<script>
window.addEventListener('DOMContentLoaded', () => {
    const copyBtn = document.getElementById('CopyEmail');
    const tooltip = document.getElementById('tooltip-copy-email');
    if (copyBtn && tooltip) {
        copyBtn.addEventListener('click', () => {
            navigator.clipboard.writeText("seb.cardoso336@gmail.com").then(() => {
                tooltip.classList.remove('invisible', 'opacity-0');
                tooltip.classList.add('visible', 'opacity-100');
                setTimeout(() => {
                    tooltip.classList.add('invisible', 'opacity-0');
                    tooltip.classList.remove('visible', 'opacity-100');
                }, 1500);
            });
        });
    }
});
</script>